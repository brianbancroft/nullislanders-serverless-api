{
    "name": "nullislanders-serverless",
    "version": "0.1.0",
    "description": "Nullislanders Graphql-only serverless implementation",
    "main": "handler.js",
    "scripts": {
        "test": "jest",
        "start": "serverless offline",
        "dev": "nodemon express-start.js",
        "deploy": "serverless deploy",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier ./src/**/*.js --write",
        "dashboard": "serverless dashboard",
        "db:migrate": "knex migrate:latest",
        "db:migrate:rollback": "knex migrate:rollback",
        "db:seed": "knex seed:run",
        "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run"
    },
    "author": "Brian Bancroft <hello@brianbancroft.ca>",
    "license": "ISC",
    "dependencies": {
        "apollo-server-express": "^2.9.3",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.4.16",
        "pg": "^7.12.1",
        "ramda": "^0.26.1",
        "serverless": "^1.52.2",
        "serverless-http": "^2.3.0"
    },
    "devDependencies": {
        "apollo-server-testing": "^2.9.3",
        "eslint": "^6.4.0",
        "eslint-plugin-jest": "^22.17.0",
        "faker": "^4.1.0",
        "husky": "^3.0.5",
        "jest": "^24.9.0",
        "knex": "^0.19.5",
        "lint-staged": "^9.3.0",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "serverless-offline": "^5.11.0",
        "typescript": "^3.6.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run lint"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
